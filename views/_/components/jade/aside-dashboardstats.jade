html
  body
    .container.col-lg-4.col-md-4.col-sm-4(style='margin-top: 5em;')
      .panel.panel-default
        .panel-heading
          h3.panel-title #{config.team.name} Chat 
        .panel-body
          ul#messages
            form(action='')
              input#m
              button(type='button', autocomplete='off') Send

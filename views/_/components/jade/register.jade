<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
script.
  //console.log(#{config._id})
  var socket = io();
  $(function(){
    $('button').click(function(){
    socket.emit('send_message', $('#inputName').val(),  $('#inputSchool').val(),$('#inputPassword').val());
    return false;
    });
  });
  
  socket.on(#{config.user.id}, function(data){
    if(data==='success_register'){
      //console.log("we good");
      location.href = '/team'; //follow teams and invite people to team
     }
  });
      






